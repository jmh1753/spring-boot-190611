<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.web.mapper.SupplierMapper"> 

    <insert id="insertSupplier" parameterType="com.bit.web.domain.SupplierDTO">
        insert into SUPPLIERS (SUPPLIER_ID, SUPPLIER_NAME, CONTACT_NAME, ADDRESS, CITY, POSTAL_CODE, COUNTRY, PHONE)
        values (#{supplierId},#{supplierName},#{contactName},#{address},#{city},#{postalCode},#{country},#{phone})
    </insert>

    <select id="selectSuppliers" resultType="com.bit.web.domain.SupplierDTO">
        select * from SUPPLIERS 
    </select>

    <select id="selectSuppliersByOption" resultType="com.bit.web.domain.SupplierDTO" parameterType="com.bit.web.domain.SupplierDTO">
      select * from SUPPLIERS where SUPPLIER_NAME = #{supplierName}
    </select>

    <select id="selectSupplierBySupplierId" resultType="com.bit.web.domain.SupplierDTO" parameterType="string">
        select * from SUPPLIERS where SUPPLIER_ID = #{supplierId}
    </select> 

    <update id="updateSupplier" parameterType="com.bit.web.domain.SupplierDTO">
        update SUPPLIERS set
        SUPPLIER_NAME = #{supplierName},
        CONTACT_NAME = #{contactName},
        ADDRESS = #{address},
        CITY = #{city},
        POSTAL_CODE = #{postalCode},
        COUNTRY = #{country},
        PHONE = #{phone}   
        where SUPPLIER_ID = #{supplierId}
    </update>

    <delete id="deleteSupplier" parameterType="com.bit.web.domain.SupplierDTO">
        delete from SUPPLIERS where SUPPLIER_ID = #{supplierId}
    </delete>

</mapper>