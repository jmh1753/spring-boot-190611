<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bit.web.mapper.CategoryMapper"> 

    <insert id="insertEmployee" parameterType="com.bit.web.domain.EmployeeDTO">
        insert into EMPLOYEES (EMPLOYEE_ID, MANAGER, NAME, BIRTH_DATE, PHOTO, NOTES)
        values (#{employeeId},#{manager},#{name},#{birthDate},#{photo},#{notes})
    </insert>

    <select id="selectEmployees" resultType="com.bit.web.domain.EmployeeDTO">
        select * from EMPLOYEES 
    </select>

    <select id="selectEmployeesByOption" resultType="com.bit.web.domain.EmployeeDTO" parameterType="com.bit.web.domain.EmployeeDTO">
      select * from EMPLOYEES where NAME = #{name}
    </select>

    <select id="selectEmployeeByemployeeId" resultType="com.bit.web.domain.EmployeeDTO" parameterType="string">
        select * from EMPLOYEES where EMPLOYEE_ID = #{value}
    </select> 

    <update id="updateEmployee" parameterType="com.bit.web.domain.EmployeeDTO">
        update EMPLOYEES set
        MANAGER = #{manager},
        NAME = #{name},   
        PHOTO = #{photo},
        NOTES = #{notes}
        where EMPLOYEE_ID = #{employeeId}
    </update>

    <delete id="deleteEmployee" parameterType="com.bit.web.domain.EmployeeDTO">
        delete from EMPLOYEES where EMPLOYEE_ID = #{employeeId}
    </delete>

</mapper>